<%- include('../views/header.ejs') %>
    <div class="main container d-flex ">

        <div class="main-body container col-xl-4 col-md-7 col-sm-8">
        
            <!-- Heading section -->
            <div class="title text-center mt-3 mb-3">
                <h1>ForgotPassword</h1>
                <p>Changing Password & VerifyPassword</p>
                <!-- Registration result -->
                <div>
                    <% if(typeof message != 'undefined') { %>
                        <p class="<%= text %>" id="result_message">&#<%= Symbol %>;<%= message %></p>
                    <% } %>
                </div>
            </div>

            <!-- form section -->
            <form method="POST" action="/admin/forgotpassword">

                <!-- username -->
                <div class="form-group mt-3">
                    <span>Enter new password :</span>
                    <input type="password" class="form-control bg-transparent border-0 rounded-0 border-bottom" placeholder="enter username" name="username" value="">
                </div>

                <!-- Password -->
                <div class="form-group mt-3">
                    <span>Confirm new password :</span>
                    <input type="password" class="form-control bg-transparent border-0 rounded-0 border-bottom" placeholder="enter password" name="password" value="">
                </div>

                <!-- Login button -->
                <div class="form-group text-center mt-4 mb-4">
                    <input type="submit" class="button btn btn-outline-dark rounded-pill col-md-7 col-sm-12" value="Login">
                </div>

                <!-- id passing hidden content -->
                <input type="hidden" class="form-control bg-transparent border-0 rounded-0 border-bottom"  name="id" value="<%= id %>">
            </form>

        </div>
    </div>

<%- include('../views/footer.ejs') %>