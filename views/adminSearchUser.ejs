<div style="height:auto; padding-top: 50px;" id="viewuser">
    <table class="table col-12 admin_table" >
      <thead>
          <tr>
              <th scope="col">#</th>
              <th scope="col">First Name</th>
              <th scope="col">Last Name</th>
              <th scope="col">Email</th>
              <th scope="col">Phone</th>
              <th scope="col">Profile</th>
              <th scope="col" class="text-center">Verify</th>
              <th scope="col">Updation</th>
          </tr>
      </thead>
      <tbody>
          <% if(users.length > 0){ 
              for(let i = 0;i < users.length ;i++){ %>
          <tr>
              <th><%= i+1 %></th>
              <td><%= users[i].firstname %></td>
              <td><%= users[i].lastname %></td>
              <td><%= users[i].email %></td>
              <td><%= users[i].phone %></td>
              <td width="200rem" height="150rem"><img src="<%= users[i].profile %>" alt="Error Loading" class="col-12" style="object-fit: contain;"></td>
              <td  class="text-center"><% if(users[i].is_verified) {%>
                      Verified &#9989
                  <% } else {%>
                      Not Verified &#10060
                  <% } %>
              </td>
              <td  colspan="2">
                  <form method="POST" action="/admin/edit?id=<%= users[i]._id %>">
                      <button class="btn btn-outline-primary rounded-0 rounded-top form-control mb-2" type="submit" >Edit</button>
                  </form>

                  <form method="POST" action="/admin/delete?id=<%= users[i]._id %>">
                      <button class="btn btn-outline-danger rounded-0 rounded-bottom form-control" type="submit">Delete</button>
                  </form>
              </td>
          </tr>
          <% }
          }else{ %>
              <tr class="text-center bg-danger">
                <th colspan="8">User Data Is Not Found</th>
              </tr>
        <% }%>
      </tbody>
    </table>
</div>
</div>

